######################################################################

# include files from other directories.  right now, this is only the
# contrib directory, but there are a number that are there.  if we can
# move the rules out toward the edges, it will be easier for others to
# add elements.

######################################################################

ifneq ($(OSTYPE),FreeBSD)
PTHREAD_LIBNAME := pthread
else
PTHREAD_LDFLAGS := -pthread
PTHREAD_LIBNAME := c_r
endif

ifeq ($(OSTYPE),IRIX64)
PTHREAD_LDFLAGS := 
elif ($(OSCLASS),VXWORKS)
PTHREAD_LDFLAGS :=
PTHREAD_LIBNAME :=
elif ($(OSTYPE),Linux)
PTHREAD_LDFLAGS := #--thread
elif ($(OSTYPE),Solaris)
PTHREAD_LDFLAGS := --thread
elif ($(OSTYPE),QNX)
PTHREAD_DEFINES := 
PTHREAD_LDFLAGS := 
PTHREAD_LIBNAME :=
endif

OPENSSL_LIBNAME := ssl crypto
OPENSSL_LDFLAGS :=
OPENSSL_INCLUDEDIRS := /usr/kerberos/include/

ARES_INCLUDEDIRS := $(ROOT)/contrib/ares
ARES_LIBDIRS := $(ROOT)/contrib/ares
ARES_LIBNAME := ares
ARES_DEFINES := 

RESIPROCATE_INCLUDEDIRS := $(ROOT)
RESIPROCATE_LIBDIRS := $(ROOT)/resiprocate/obj.$(TARGET_NAME) 
RESIPROCATE_LIBNAME := resiprocate
RESIPROCATE_LDFLAGS :=

ifeq ($(VOCAL_BUILD_SHARED_LIBS),yes)
RESIPROCATE_DEPENDS := $(ROOT)/resiprocate/obj.$(TARGET_NAME)/libresiprocate.so
else
RESIPROCATE_DEPENDS := $(ROOT)/resiprocate/obj.$(TARGET_NAME)/libresiprocate.a
endif
$(RESIPROCATE_DEPENDS): 
	cd $(ROOT)/resiprocate; $(MAKE)


DUM_INCLUDEDIRS := $(ROOT)
DUM_LIBDIRS := $(ROOT)/resiprocate/dum/obj.$(TARGET_NAME) 
DUM_LIBNAME := dum
DUM_LDFLAGS :=

ifeq ($(VOCAL_BUILD_SHARED_LIBS),yes)
DUM_DEPENDS := $(ROOT)/resiprocate/dum/obj.$(TARGET_NAME)/libdum.so
else
DUM_DEPENDS := $(ROOT)/resiprocate/dum/obj.$(TARGET_NAME)/libdum.a
endif
$(DUM_DEPENDS): 
	cd $(ROOT)/resiprocate/dum; $(MAKE)

DEFINES += USE_IPV6 USE_ARES
