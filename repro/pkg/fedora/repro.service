[Unit]
Description=reSIProcate repro SIP proxy daemon
After=syslog.target
After=network.target

[Service]
Type=forking
ExecStartPre=mkdir -p /var/run/repro
ExecStartPre=chown repro:repro /var/run/repro
PIDFile=/var/run/repro/repro.pid
ExecStart=/usr/sbin/repro /etc/repro/repro.config --Daemonize=true --LoggingType=syslog --PidFile=/var/run/repro/repro.pid

[Install]
WantedBy=multi-user.target
